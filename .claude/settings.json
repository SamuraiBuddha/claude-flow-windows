{
  "permissions": {
    "allow": [
      "Bash(powershell.exe:*)",
      "Bash(python:*)",
      "Bash(uv:*)",
      "Bash(git:*)",
      "Write",
      "Edit",
      "Read",
      "Task",
      "mcp__neo4j-memory-lilith__*",
      "mcp__neo4j-cypher-lilith__*",
      "mcp__time-precision__*",
      "mcp__claude-flow-windows__*"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File .claude\\hooks\\session_start.ps1"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File .claude\\hooks\\user_prompt_submit.ps1"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File .claude\\hooks\\pre_tool_use.ps1"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File .claude\\hooks\\post_tool_use.ps1"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File .claude\\hooks\\stop.ps1"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File .claude\\hooks\\subagent_stop.ps1"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File .claude\\hooks\\pre_compact.ps1"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File .claude\\hooks\\notification.ps1"
          }
        ]
      }
    ]
  }
}